<LoginScreen>:
    GridLayout:
        cols: 1
        rows: 2
        GridLayout:
            cols: 1
            rows: 4
            Label:
                text: "User Login"
            TextInput:
                hint_text: 'Username'
            TextInput:
                hint_text: 'Password'
            Button:
                text: 'Login'
        GridLayout:
            cols: 2
            row: 1
            Button:
                text: 'Forgot password?'
            Button:
                text: 'Sign up'
                on_press: root.sign_up()

<SignUpScreen>
    GridLayout:
        cols: 1
        rows: 4
        Label:
            text: 'Sign up for a space journey!'
        TextInput:
            id: uname
            hint_text: 'New username'
        TextInput:
            id: pwd
            hint_text: 'New Password'
        Button:
            text: 'Submit'
            on_press: root.add_user(root.ids.uname.text, root.ids.pwd.text)

<RootWidget>:
    LoginScreen:
        name: 'Login_screen'
    SignUpScreen:
        name: 'SignUp_screen'
