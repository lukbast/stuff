<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="0" onKeyReleased="#handleKeyReleased"/>
    <Button fx:id="helloButton" text="Say Hello" GridPane.columnIndex="0" GridPane.rowIndex="1" onAction="#onButtonClicked"/>
    <Button fx:id="byeButton" text="Say Bye" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#onButtonClicked"/>
    <CheckBox fx:id="cb1" text="Clear the field after saying hello or bye"
              GridPane.columnIndex="0" GridPane.rowIndex="2" onAction="#handleChange"/>
    <Label fx:id="label1" text="Nothing has happened" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

</GridPane>